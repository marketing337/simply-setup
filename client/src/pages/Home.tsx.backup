                      onClick={() => setShowAllCities(!showAllCities)}
                      className="px-6 py-2 text-blue-600 border-blue-200 hover:bg-blue-50 hover:border-blue-300"
                    >
                      {showAllCities ? (
                        <>Show Less Cities</>
                      ) : (
                        <>Show All {allLocations.length} Cities</>
                      )}
